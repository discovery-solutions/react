{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "target": "es2016",                          
    "module": "esnext",
    "moduleResolution": "node",                     
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],                            
    "strict": true,  
    "esModuleInterop": false,                 
    "outDir": "ts-out",
    "rootDir": "./src/"
  },
}